/*选择时间*/
.calendarCheck{height: 50px; line-height: 50px; padding: 0 0 0 24px; font-size: 12px; color: #333;}
.calendarCheck .timeBox{float: left; margin: 0 40px 0 0;}
.timeBox input{width: 86px; height: 18px; cursor: pointer; border: 1px solid #dcdcdd; border-radius: 5px; padding: 5px 30px 5px 8px; background: url("../images/calendar.png") no-repeat 94px center; background-size: 20px;}
.timeBox input:focus{outline: none; border: 1px solid #dcdcdd;}

/*选择记录*/
.portlet-body input[type='checkbox']{opacity: 0; cursor: pointer; -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=0)"; filter: alpha(opacity=0);}
.portlet-body .checkBox{border: 1px solid #666; border-radius: 3px; width: 18px; height: 18px; margin: 0 5px 0; display: block; float: left;}

.portlet-body .checkBox.checkedActive{background: #00afc7 url("../images/gou.png") no-repeat center center; background-size: 12px; border: 1px solid #00afc7;}
.portlet-body input[type='checkbox']:focus{outline: 0;outline:none;-webkit-box-shadow: none;-moz-box-shadow:none;box-shadow:none;}

.paginList,.pagination{height: auto; margin: 0;}

/*结算*/
.allPay{line-height: 40px; color: #666; font-size: 14px; overflow: hidden;}
.allPay span{float: right; margin: 0 30px 0 0;}
.allPay span em{font-size: 14px;}
.allPay span.btn1{height: 32px; width: 82px; background: #00afc7; color: #fff; border-radius: 8px; text-align: center; line-height: 32px; margin: 4px 6.4% 0 0;}
.allPay span.another{margin: 0 6.4% 0 0;}

/*侧拉表格*/
.checkdetailB .content{padding-right: 30px;}

.orderInfo{margin: 18px 0 0;}
.orderInfo tr{border: 1px solid #ccc;}
.orderInfo tr th,.orderInfo tr td{border: 1px solid #ccc; width: 107px; height: 39px; line-height: 39px; text-align: center;}

.orderInfo tbody>tr>td, .orderInfo thead>tr>th{padding: 0!important;}
.orderInfo tbody>tr>td:first-child, .orderInfo thead>tr>th:first-child{padding: 0!important;}
.orderInfo tbody>tr>td:first-child, .orderInfo thead>tr>th:first-child{border: 1px solid #ccc;}
.orderInfo tbody>tr:nth-child(odd)>td, .orderInfo tbody>tr:nth-child(odd)>th{border: 1px solid #ccc;}

.orderInfo TBODY TR:hover{background: #fff;-webkit-box-shadow: 0 0 0 0 #FFF;-moz-box-shadow: 0 0 0 0 #FFF;box-shadow: 0 0 0 0 #FFF;}
TBODY TR:hover{background: #fff;box-shadow: 0 0 0 0 #FFF;}